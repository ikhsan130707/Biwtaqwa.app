<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.videokajian.MenuVideoKajianActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu_Vidio_Kajian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="@string/text_menu_video_kajian"
        app:titleTextAppearance="@style/ToolbarAppeareance"
        app:titleTextColor="@color/colorWhite"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_vidio_kajian"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/toolbar_menu_Vidio_Kajian"
            tools:listitem="@layout/item_menu_vidio_kajian"/>


</androidx.constraintlayout.widget.ConstraintLayout>